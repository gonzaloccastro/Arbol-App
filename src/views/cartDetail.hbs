<h1>Vista del carrito</h1>
{{#if _id}}
    {{#if products}}
        <h2>Listado de productos agregados</h2>
        {{#each products}}
            <div style="background:aquamarine">
                <p>{{this.id.title}}</p>
                <p>Cantidad: {{this.quantity}}</p>
            </div>
        {{/each}}
            <button onclick="deleteCart(`{{_id}}`)">Eliminar este carrito</button>
            <button onclick="purchase('{{_id}}')">Finalizar compra</button>
    {{else}}
        No hay productos en el carrito
        <button onclick="deleteCart(`{{_id}}`)">Eliminar este carrito</button>
    {{/if}}
{{else}}
    <p>No hay detalles</p>
{{/if}}
<script src="/js/cart.js"></script>